#!bin/bash

function parse_git_branch() {
    a=$(git branch 2> /dev/null | sed -n -e 's/^\* \(.*\)/\1/p')
    if [[ "$a" == "(no branch)" ]]; then
        a=""
    fi
    $a
}

function prev_ok() {
    if [ "$?" == "0" ]; then
        echo -e '\e[0;100m>> '
    else
        echo -e '\e[0;124m>> '
    fi
}

NEWLINE=$'\n'

YELLOW=$'%F{221}'

COLOR_DEF=$'%f'
COLOR_USR=$'%F{243}'
COLOR_DIR=$'%F{240}'
COLOR_GIT_BRANCH=$'%F{75}'
setopt PROMPT_SUBST
export PROMPT='%(0D.%(18d.ðŸŽ‚.).)${COLOR_DIR}%~${COLOR_GIT_BRANCH}$(parse_git_branch)$(~/.config/zsh/gs)${COLOR_DEF} >> '
