COLOR_DEF=$'%f'
COLOR_USR=$'%F{243}'
COLOR_DIR=$'%F{221}'
COLOR_GIT_BRANCH=$'%F{45}'
setopt PROMPT_SUBST
export PROMPT='${COLOR_USR}%n ${COLOR_DIR}%~${COLOR_GIT_BRANCH}$(parse_git_branch)$(~/.config/zsh/gs)${COLOR_DEF} >> '
